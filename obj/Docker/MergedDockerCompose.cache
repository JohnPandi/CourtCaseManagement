networks:
  court-case-management-network:
    driver: bridge
services:
  court-case-management-pgadmin:
    depends_on:
    - court-case-management-postgres
    environment:
      PGADMIN_DEFAULT_EMAIL: admin
      PGADMIN_DEFAULT_PASSWORD: admin
    image: dpage/pgadmin4
    networks:
      court-case-management-network: {}
    ports:
    - 16544:80/tcp
  court-case-management-postgres:
    environment:
      POSTGRES_PASSWORD: admin
      POSTGRES_USER: postgres
    image: postgres
    networks:
      court-case-management-network: {}
    ports:
    - 15433:5432/tcp
    restart: always
    volumes:
    - C:\Thiago\workspace\CourtCaseManagement\init.sql:/docker-entrypoint-initdb.d/init.sql:rw
  courtcasemanagement.api:
    build:
      context: C:\Thiago\workspace\CourtCaseManagement
      dockerfile: CourtCaseManagement.Api/Dockerfile
    depends_on:
    - court-case-management-pgadmin
    - court-case-management-postgres
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: https://+:443;http://+:80
      DB_CONNECTION_STRING: host=ourt-case-management-postgres;port=5432;database=postgres;username=postgres;password=admin;
    image: courtcasemanagementapi
    networks:
      court-case-management-network: {}
    ports:
    - 80/tcp
    - 443/tcp
    volumes:
    - C:\Users\thiag\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\thiag\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
version: '3.4'